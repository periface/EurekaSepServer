@using Castle.Core.Internal
@model Eureka.Spe.AcademicUnits.Dto.AcademicUnitDto

@{
    Layout = null;
}
<style>
    #iconPlaceHolder {
        width: 85px;
        height: 85px;
        max-width: 85px;
        max-height: 85px;
    }
</style>
<form id="AddEditAcademicUnitForm" role="form" novalidate class="form-validation">
    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="hidden" name="TenantId" value="@Model.TenantId" />
    <div class="row clearfix">
        <div class="col-sm-12">
            <div class="form-group form-float">
                <div class="form-line" id="upload">
                    @if (Model.Img.IsNullOrEmpty())
                    {
                        <img id="iconPlaceHolder" src="" />
                    }
                    else
                    {
                        <img id="iconPlaceHolder" src="@Model.Img" />
                    }
                    <input name="icon" id="icon" type="file" class="validate form-control">
                    <input type="hidden" value="@Model.Img" name="img" id="img" />
                </div>
            </div>
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-sm-12">
            <div class="form-group form-float">
                <div class="form-line">
                    <input id="name" type="text" name="Name" value="@Model.Name" required class="validate form-control">
                    <label for="name" class="form-label">@L("Name")</label>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group form-float">
                <div class="form-line">
                    <input id="ShortName" type="text" name="ShortName" value="@Model.ShortName" required maxlength="32" class="validate form-control">
                    <label for="ShortName" class="form-label">@L("ShortName")</label>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group form-float">
                <div class="form-line">

                    <label for="name" class="form-label">@L("Description")</label>
                    <textarea name="description" class="form-control">@Model.Description</textarea>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="~/js/helpers.js"></script>
<script>
    (function () {
        var uploadOptions = {
            baseUrl: "/upload",
            sizes: ["128x128"],
            optimize: true,
            uniqueFolder: "academicunits"
        };
        enableUploadOnFileElm("#icon", function (data) {
            $("#img").val(data.FileUrl);
            $("#iconPlaceHolder").attr("src", data.Sizes["128x128"]);
            abp.ui.clearBusy($("#upload"));
        }, function () {
            abp.ui.setBusy($("#upload"));
        }, uploadOptions);
        var form = $("#AddEditAcademicUnitForm");
        $.AdminBSB.input.activate(form);
    })();
</script>