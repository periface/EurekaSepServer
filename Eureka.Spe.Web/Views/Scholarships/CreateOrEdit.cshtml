@using Abp.Extensions
@model Eureka.Spe.Scholarships.Dto.ScholarshipDto

@{
    Layout = null;
}
<form id="AddEditScholarshipForm" role="form" novalidate class="form-validation">
    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="hidden" name="TenantId" value="@Model.TenantId" />
    <div class="row clearfix">
        <div class="col-sm-12">
            <div class="form-group form-float">
                <div class="form-line" id="upload">
                    @if (Model.Img.IsNullOrEmpty())
                    {
                        <img id="iconPlaceHolder" src="" />
                    }
                    else
                    {
                        <img id="iconPlaceHolder" src="@Model.Img" />
                    }
                    <input name="icon" id="icon" type="file" class="validate form-control">
                    <input type="hidden" value="@Model.Img" name="img" id="img" />
                </div>
            </div>
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-sm-12">
            <div class="form-group form-float">
                <div class="form-line">
                    <input id="Title" type="text" name="Title" value="@Model.Title" required maxlength="32" class="validate form-control">
                    <label for="Title" class="form-label">@L("Title")</label>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group form-float">
                <div class="form-line">

                    <label for="name" class="form-label">@L("Description")</label>
                    <textarea name="description" class="form-control">@Model.Description</textarea>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="~/js/helpers.js"></script>
<script src="~/Views/Scholarships/CreateOrEdit.js"></script>