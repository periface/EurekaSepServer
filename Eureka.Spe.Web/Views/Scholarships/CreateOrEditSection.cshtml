@using Abp.Extensions
@model Eureka.Spe.ScholarshipSections.Dto.ScholarshipSectionDto

@{
    Layout = null;
}

<form id="AddEditScholarshipSectionForm" role="form" novalidate class="form-validation">
    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="hidden" name="ScholarshipId" value="@Model.ScholarshipId" />
    <div class="row clearfix">
        <div class="col-sm-12">
            <div class="form-group form-float">
                <div class="form-line">
                    <input id="Title" type="text" name="Title" value="@Model.Title" required maxlength="32" class="validate form-control">
                    <label for="Title" class="form-label">Titulo</label>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="form-group form-float">
                <div class="form-line">

                    <h4>Contenido</h4>
                    <textarea class="form-control" id="summernote" name="Content">@Model.Content</textarea>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="~/Views/Scholarships/CreateOrEditSection.js"></script>