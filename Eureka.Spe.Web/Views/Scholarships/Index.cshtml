

@section Styles{

    <link href="~/js/bootstraptable/bootstrap-table.min.css" rel="stylesheet" />
}@{
    ViewBag.ActiveMenu = PageNames.Scholarships; //The menu item will be active for this page.
    ViewBag.Title = "Becas";
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-small-center">

        <a class="btn btn-lg btn-primary waves-effect pull-right" href="@Url.Action("CreateOrEdit")">Crear nueva beca</a> <br /><br /><br />

        <div class="card">
            <div class="body table-responsive">
                <table data-pagination="true" data-classes="table table-no-bordered table-condensed" data-side-pagination="server" data-events="buttons" data-search="true" data-url="/api/services/app/scholarship/getall" id="table"></table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
