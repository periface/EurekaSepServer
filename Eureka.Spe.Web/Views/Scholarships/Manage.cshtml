@model Eureka.Spe.Scholarships.Dto.ScholarshipDto

@{
    ViewBag.ActiveMenu = PageNames.Scholarships; //The menu item will be active for this page.
}
@section Styles{
    <link href="~/js/trumboWys/ui/trumbowyg.min.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-lg-12 col-small-center ">
        <div class="card">
            <div class="body">
                <h4>@Model.Title</h4>
                <a href="@Url.Action("CreateOrEdit",new{id=Model.Id})" class="btn btn-primary">Editar contenido</a>
            </div>
        </div>
    </div>
</div>
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-small-center">
        <div class="card">
            <div class="body" style="min-height: 500px">

                <input type="hidden" value="@Model.Id" id="Id" />
                <div class="row">
                    <div class="col-lg-12">
                        <ul class="nav nav-tabs" role="tablist">
                            <li role="presentation" class="active"><a href="#sections" data-url="/Scholarships/Sections/" aria-controls="sections" role="tab" data-toggle="tab">Secciones</a></li>
                            <li role="presentation"><a href="#notifications" data-url="/Notifications/GetNotificationsForEntity?entityName=scholarships&id=" aria-controls="notifications" role="tab" data-toggle="tab">Notificaciones</a></li>
                            <li role="presentation"><a href="#tags" data-url="/Stats/GetStatsForEntity?entityName=scholarships&entityId=" aria-controls="tags" role="tab" data-toggle="tab">Estadísticas</a></li>
                        </ul>
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active" id="sections">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="~/js/eModal/eModal.min.js"></script>
    <script src="~/js/helpers.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script>
    <script src="~/js/trumboWys/trumbowyg.min.js"></script>
    <script src="~/js/trumboWys/langs/es.min.js"></script>
    <script src="/lib/jquery-sparkline/dist/jquery.sparkline.js"></script>
    <script src="~/Views/Scholarships/Manage.js"></script>
}
