@model List<Eureka.Spe.ScholarshipsService.ScholarshipSections.Dto.ScholarshipSectionDto>
@{
    Layout = null;
}
<link href="~/Views/Scholarships/Sections.css" rel="stylesheet" />
<input type="hidden" id="Id" value="@ViewBag.ScholarshipId" />

@if (!Model.Any())
{
    <div class="">
        <div class="row">
            <div class="col-sm-12 text-center">
                <img class="img-responsive" style="width: 15%; margin: 0 auto" src="https://storage.googleapis.com/material-design/publish/material_v_12/assets/0B7WCemMG6e0VWG5nei0wWXpoczA/components-bottom-navigation.png" alt="Alternate Text" />
                <h2>Secciones</h2>
                <p>
                    Seleccione los elementos que desee asignar a la publicación
                </p>
                <p class="help-block">
                    Una vez asignada la unidad académica se dará prioridad a las notificaciones para los alumnos dentro de la misma.
                </p>
                <button type="button" class="btn btn-primary js-add-section">Agregar sección</button>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">


        <div class="col-sm-12">
            <button type="button" class="btn btn-primary js-add-section pull-right">Agregar sección</button>
        </div>
        <div class="col-lg-12">
            <table class="table table-responsive table-condensed">
                <thead>
                    <tr>
                        <th style="font-size: 0.9rem;">
                            Titulo
                        </th>
                        <th style="font-size: 0.9rem;">
                            Ultima actualización
                        </th>
                        <th style="font-size: 0.9rem;" class="text-center">
                            Opciones
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var scholarshipSection in Model)
                    {
                        <tr data-id="@scholarshipSection.Id">
                            <td style="font-size: 0.9rem;">
                                @scholarshipSection.Title
                            </td>
                            <td style="font-size: 0.9rem;">
                                @if (scholarshipSection.LastModificationTime != null)
                                {
                                    @scholarshipSection.LastModificationTime.Value.ToShortDateString()  @:  @scholarshipSection.LastModificationTime.Value.ToShortTimeString() hrs

                                }
                                else
                                {
                                    <span>--</span>
                                }
                            </td>
                            <td class="text-center">
                                <button type="button" class="btn btn-default btn-xs js-edit-section" data-id="@scholarshipSection.Id"><i class="material-icons">edit</i></button>
                                <a class="btn btn-xs btn-danger js-delete-scholarshipSection" data-id="@scholarshipSection.Id"><i class="material-icons">delete_sweep</i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

